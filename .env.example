# Vela Configuration Example
# Copy this file to .env and fill in your values

# Database Configuration
# For SQLite: sqlite:///./vela.db
# For PostgreSQL: postgresql://user:password@localhost:5432/vela
DATABASE_URL=sqlite:///./vela.db

# Discord Bot Configuration (optional - can be configured via web UI)
BOT_TOKEN=your_bot_token_here
GUILD_ID=123456789012345678

# Discord OAuth Configuration (for web interface login)
DISCORD_CLIENT_ID=your_discord_app_client_id
DISCORD_CLIENT_SECRET=your_discord_app_client_secret
DISCORD_REDIRECT_URI=http://localhost:8000/auth/callback

# API Configuration
API_SECRET_KEY=change-this-to-a-random-secret-key
API_PORT=8000
API_HOST=0.0.0.0

# Security
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# Logging
DEBUG=false
LOG_LEVEL=INFO

# Redis Configuration (optional - for caching)
# REDIS_URL=redis://localhost:6379

# CORS Origins (comma-separated, no spaces)
CORS_ORIGINS_STR=http://localhost:3000,http://localhost:8000